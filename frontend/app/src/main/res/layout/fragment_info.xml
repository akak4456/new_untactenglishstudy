<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".member.fragment.InfoFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="내 정보"
        android:textColor="#00BCD4"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="이름"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/my_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:background="@drawable/edge"
            android:text="name"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:text="이메일"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/my_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:background="@drawable/edge"
            android:text="email"
            android:textSize="24sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:text="잔여 포인트"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/my_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:background="@drawable/edge"
            android:text="point"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="환급 포인트"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/my_refund"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="@drawable/edge"
            android:gravity="center"
            android:text="refund point"
            android:textSize="24sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn_chk_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_quiz"
            android:layout_margin="10dp"
            android:text="이메일 인증" />
        <Button
            android:id="@+id/btn_modify_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_quiz"
            android:layout_margin="10dp"
            android:text="회원정보 수정"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
    >
        <Button
            android:id="@+id/btn_modify_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_quiz"
            android:layout_margin="10dp"
            android:text="비밀번호 수정" />
        <Button
            android:id="@+id/btn_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_quiz"
            android:layout_margin="10dp"
            android:text="회원탈퇴"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_quiz"
            android:layout_margin="10dp"
            android:text="결제" />
        <Button
            android:id="@+id/btn_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_quiz"
            android:layout_margin="10dp"
            android:text="환급" />
    </LinearLayout>

</LinearLayout>



